{
  "manifest_version": 3,
  "name": "Side Panel Test",
  "description": "ICongition page summarization",
  "version": "0.1",
  "icons": {
    "16": "img/icons8-brain-50.png",
    "48": "img/icons8-brain-50.png",
    "128": "img/icons8-brain-50.png"
  },
  "action": {
    "default_icon": "img/icons8-brain-50.png",
    "default_title": "ICognition"
  },
  "background": {
    "service_worker": "src/background.js"
  },
  "side_panel": {
    "default_path": "sidepanel/sidepanel.html"
  },
  "permissions": ["tabs", "sidePanel"],
  "content_scripts": [
    {
      "matches": ["https://bergum.medium.com/*"],
      "css": ["style/contentScript.css", "style/style.css"],
      "js": ["sidepanel/sidepanel.js"],
      "run_at": "document_end",
      "all_frames": true
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["img/*.png"],
      "matches": ["https://bergum.medium.com/*"]
    }
  ]
}
